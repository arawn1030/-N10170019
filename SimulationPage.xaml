<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NumberSearchApp.SimulationPage">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="模擬" FontSize="24" HorizontalOptions="Center" />

            <!-- 模擬按鈕 -->
            <Button Text="開始模擬" Clicked="OnSimulateClicked" />

            
     
            <!-- 顯示最後模擬結果 -->
            <Label x:Name="recordLabel"
                   Text="紀錄："
                   FontSize="16"
                   LineBreakMode="WordWrap" />

            <!-- 顯示模擬詳細資料 -->
            <Label x:Name="detailLabel"
                   Text="詳細資料："
                   FontSize="14"
                   LineBreakMode="WordWrap" />

    

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
